              >INVADERS</span
            >
          </h1>
          <div class="title-scanlines"></div>
          <div class="title-glow"></div>
        </div>

        <!-- SubtÃ­tulo -->
        <p class="game-subtitle">DEFEND EARTH FROM ALIEN INVASION</p>

        <!-- Invasor animado decorativo -->
        <div class="animated-invader">
          <div class="invader-container">
            <div class="invader-sprite">ðŸ‘¾</div>
            <div class="invader-eyes"></div>
          </div>
          <div class="invader-beam"></div>
          <div class="invader-shadow"></div>
        </div>

        <!-- Menu de botÃµes -->
        <div class="menu-buttons action-buttons">
          <button class="button-play primary-action">
            <span class="button-icon">ðŸš€</span>
            START GAME
          </button>

          <button class="button-view-ranking secondary-action">
            <span class="button-icon">ðŸ‘¤</span>
            LOGIN
          </button>
        </div>
      </div>

      <!-- Footer -->
      <div class="footer-container">
        <div class="footer-line"></div>
        <span class="footer-text">DEVELOPED BY MATHEUSIN v1.5</span>
        <div class="footer-stars">
          <span>âœ¦</span><span>âœ§</span><span>âœ¦</span>
        </div>
      </div>
    </section>



    <!-- Scripts -->
    <script type="module" src="src/index.js"></script>
    <script type="module">
      // Importar a classe Star para o fundo animado
      import Star from "./src/classes/Star.js";

      class StarFieldBackground {
        constructor() {
          this.canvas = document.getElementById("stars-background");
          this.ctx = this.canvas.getContext("2d");
          this.stars = [];
          this.numberOfStars = 120;

          this.resize();
          this.init();
          this.animate();

          window.addEventListener("resize", () => this.resize());
        }

        resize() {
          this.canvas.width = window.innerWidth;
          this.canvas.height = window.innerHeight;
          this.stars = [];
          this.init();
        }

        init() {
          for (let i = 0; i < this.numberOfStars; i++) {
            const star = new Star(this.canvas.width, this.canvas.height);
            this.stars.push(star);
          }
        }

        animate() {
          this.ctx.globalCompositeOperation = "source-over";
          this.ctx.clearRect(0, 0, this.canvas.width, this.canvas.height);
          this.ctx.fillStyle = "#050519";
          this.ctx.fillRect(0, 0, this.canvas.width, this.canvas.height);

          this.stars.forEach((star) => {
            star.update();
            star.draw(this.ctx);
          });

          requestAnimationFrame(() => this.animate());
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        new StarFieldBackground();
      });
    </script>
  </body>
</html>